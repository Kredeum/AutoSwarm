{
  "name": "autoswarm-backend",
  "version": "0.0.9",
  "main": "",
  "scripts": {
    "all": "pnpm clean && pnpm format  && pnpm check && pnpm build && pnpm test && pnpm run deploy-test",
    "clean": "forge clean",
    "format": "forge fmt",
    "check": "solhint src/*.sol -q",
    "build": "forge build",
    "test": "forge test",
    "check:anvil": "DEPLOY_PARAMS=\"--rpc-url anvil\" pnpm run deploy:all",
    "check:sepolia": "DEPLOY_PARAMS=\"--rpc-url sepolia\" pnpm run deploy:all",
    "check:gnosis": "DEPLOY_PARAMS=\"--rpc-url gnosis\" pnpm run deploy:all",
    "deploy:anvil": "DEPLOY_PARAMS=\"--rpc-url anvil --account $ANVIL_ACCOUNT --sender $ANVIL_SENDER --broadcast\" pnpm run deploy:all",
    "deploy:sepolia": "DEPLOY_PARAMS=\"--rpc-url sepolia --account $TESTNET_ACCOUNT --sender $TESTNET_SENDER --broadcast --verify\" pnpm run deploy:all",
    "deploy:gnosis": "DEPLOY_PARAMS=\"--rpc-url gnosis --account $MAINNET_ACCOUNT --sender $MAINNET_SENDER --broadcast --verify\" pnpm run deploy:all",
    "deploy:check:anvil": "pnpm deploy:anvil && pnpm check:anvil",
    "deploy:check:sepolia": "pnpm deploy:sepolia && pnpm check:sepolia",
    "deploy:check:gnosis": "pnpm deploy:gnosis && pnpm check:gnosis",
    "deploy:all": "forge script script/DeployAll.s.sol $DEPLOY_PARAMS"
  },
  "keywords": [
    "forge",
    "deployment",
    "addresses"
  ],
  "author": "Kredeum",
  "license": "MIT",
  "devDependencies": {
    "solhint": "^4.1.1"
  }
}